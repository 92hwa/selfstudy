<Window x:Class="wpfEx01.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="입력창" Height="150" Width="300" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock x:Name="lblMessage" Text="적용할 Contrast 값을 입력하세요:" Margin="0,0,0,10"/>
        <TextBox x:Name="txtInputValue" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btnInput" Content="확인" Width="70" Margin="0,0,5,0" Click="btnInput_Click"/>
            <Button Name="btnCancel" Content="취소" Width="70" Click="btnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
